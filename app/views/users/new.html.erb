<body class="bg-dark">
  <div class="">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header"><h4>Sign Up</h4></div>
      <div class="card-body">
        <%= flash_messages %>
        <%= form_tag '/users/' do |f|  %>
          <div class="form-group">
            <label for="exampleInputEmail1">User Name</label><br/>
            <%= text_field_tag :user_name, nil, class: 'form-control', placeholder: 'User name', required: true %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label><br/>
            <%= password_field_tag :password, nil, autocomplete: "off", class: 'form-control', placeholder: 'Password', required: true %>
          </div>
          
          <%= link_to 'Back', '/log_in', class: 'btn btn-secondary btn-md' %>	<%= submit_tag 'Submit', class: 'btn btn-primary btn-md pull-right'  %>
        <% end %>
        <div class="text-center"> 
        </div>
      </div>
    </div>
  </div>
</body>